{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current test file",
      "args": ["--import", "tsx", "--test", "${relativeFile}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "LOCAL_GIT_DIRECTORY": "${workspaceFolder}/git"
      }
    }
  ]
}
